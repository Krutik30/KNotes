<div className="pop-box ">
    <form>
        <input 
            name="title"
            className="d-block " 
            type="text" 
            onChange={handleChangePop} 
            value={newNote.title} 
            placeholder="Title" 
            
        />
        <textarea 
            name="content"
            className="d-block " 
            onChange={handleChangePop} 
            value={newNote.content} 
            placeholder="Take a Note"
        ></textarea>
        <button onClick={addNote} className="b1 btn btn-primary">Add</button>
    </form>
</div>